import { useApi } from './api.esnext';
import { useSubscription } from './subscription.esnext';
import { ExtensionHasNoFieldError } from '../errors.esnext';

/**
 * Returns the `checkoutSettings` applied to the checkout.
 */
function useCheckoutSettings() {
  const api = useApi();
  const extensionTarget = api.extension.target;
  if (!('checkoutSettings' in api)) {
    throw new ExtensionHasNoFieldError('checkoutSettings', extensionTarget);
  }
  return useSubscription(api.checkoutSettings);
}

export { useCheckoutSettings };
