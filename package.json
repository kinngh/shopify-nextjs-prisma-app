{
  "name": "shopify-node-mongodb-next-app",
  "version": "0.1.3",
  "description": "Shopify Boilerplate Code written in Next, Node, MongoDB and GraphQL",
  "main": "server.js",
  "scripts": {
    "update": "ncu -u",
    "update:check": "ncu",
    "lint": "next lint",
    "tunnel": "lt --port 8081",
    "dev": "rm -rf .next && node server.js",
    "build": "rm -rf .next && NEXT_TELEMETRY_DISABLED=1 next build",
    "start": "npm run build && NODE_ENV=production node server.js"
  },
  "author": {
    "name": "Harshdeep Singh Hura",
    "url": "https://harshdeephura.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinngh/shopify-node-mongodb-next-app.git"
  },
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.4.16",
    "@shopify/app-bridge-react": "^2.0.4",
    "@shopify/app-bridge-utils": "^2.0.4",
    "@shopify/koa-shopify-auth": "^4.1.4",
    "@shopify/koa-shopify-webhooks": "^4.2.1",
    "@shopify/polaris": "^7.0.0",
    "cryptr": "^6.0.2",
    "dotenv": "^10.0.0",
    "graphql": "^15.6.1",
    "koa": "^2.13.3",
    "koa-combine-routers": "^4.0.2",
    "koa-router": "^10.1.1",
    "mongoose": "^6.0.10",
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "store": "^2.0.12",
    "webpack": "^5.58.1"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "localtunnel": "^2.0.2",
    "npm-check-updates": "^11.8.5"
  }
}
