// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model stores {
  shop     String   @id
  isActive Boolean? @default(false)

  @@index([shop])
}

model session {
  id      String  @id
  content String? @db.Text
  shop    String?

  @@index([id])
  @@index([shop])
}

model metrics {
  appLoadId  String   @id
  shop       String?
  INP        Float?
  FID        Float?
  CLS        Float?
  LCP        Float?
  FCP        Float?
  TTFB       Float?
  raw_json   String?  @db.Text
  created_at DateTime @default(now())
}
